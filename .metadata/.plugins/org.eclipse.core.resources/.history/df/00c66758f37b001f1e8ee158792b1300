#include <stdint.h>
#include <stdio.h>
#include "stm32f4xx.h"
#include "system_stm32f4xx.h"
#include "uart.h"
#include "led.h"
#include "string.h"
#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

int main(void)
{
	SystemInit();
	char str[32];
	int choice;
	UartInit(9600);
	ledinit(LED_RED_PIN);
	ledinit(LED_BLUE_PIN);
	while(1)
	{
		UartPuts("ENTER WHICH LED YOU WANT TO GLOW \r\n");
		UartPuts("1. RED LED ON \r\n 2. RED LED OFF \r\n 3. BLUE LED ON \r\n 4. BLUE LED OFF \r\n");
		UartGets(str);
		sscanf(str,"%d",&choice);
		switch(choice)
		{
		case 1 : ledon(LED_RED_PIN)  ;
		         break;
		case 2 : ledoff(LED_RED_PIN);
                 break;
		case 3 : ledon(LED_BLUE_PIN) ;
		         break;
		case 4 : ledoff(LED_BLUE_PIN) ;
		         break;
		}
	}
	return 0;
}
